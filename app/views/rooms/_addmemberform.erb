<div class="row">
    <div class="col-md-6 col-md-offset-3">
    <div class="js-message-errors"></div>
    <%= form_for(@room_member , remote:"true", class: 'js-form') do |f| %>
        <% @room_member.room_id = @room.id %>
        <%= f.hidden_field :room_id %>
        <%= f.label "名前" %>
        <%= f.text_field :name %>
        <%= f.submit "メンバー追加", class: "btn btn-primary" %>
    <% end %>
    </div>
</div>